<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{>links_upper}}
    <title>Weather App</title>
    <style>
        .tooltip {
            inset: -11px auto auto 0px !important;
            font-size: 1.2rem !important;
        }
    </style>
</head>

<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 Oct, 2023</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span>0</span><sup>o</sup>C</p>
                            <p id="temp_status" data-bs-toggle="tooltip" data-bs-placement="bottom" title="{{mood}}"><i
                                    class="fa fa-cloud" area-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    {{>footer}}
    {{>links_footer}}
    <script src="js/main.js"></script>
    
</body>

</html>